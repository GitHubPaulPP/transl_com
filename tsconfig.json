{
  "extends": "astro/tsconfigs/base",
  "include": [
    "**/*.ts",
    "**/*.astro"
  ],
  "exclude": [
    "dist"
  ],
    "compilerOptions": {
      "baseUrl": ".",
      "paths": {
        "@public/*": [
          "public/*"
        ],
        "@components/*": [
          "src/components/*"
        ],
       
        "@layouts/*": [
          "src/layouts/*"
        ],
        "@pages/*": [
          "src/pages/*"
        ],
        "@styles/*": [
          "src/styles/*"
        ],
        "@consts": [
          "src/consts.ts"
        ],

},

    "strictNullChecks": true,
    "allowJs": true


    }
}
