<style>
    header {
        text-align: justify;
        padding: 2em;
    }

    .blog-card {
        display: flex;
        flex-flow: column nowrap;
        align-items: center;
        border: 1px solid rgb(221, 216, 216);
        margin-left: 2em;
        margin-right: 2em;
        margin-bottom: 2em;
        box-shadow: 0.1em 0.1em 0.1em rgb(141, 199, 243);
    }

    .blog-card img {
        width: 23em;
        height: 18em;
        margin-top: 0.5em;
        object-fit: cover;
        max-width: 100%;
        padding: 0.5em;
        flex: 1;
    }

    .post-title {
        padding: 1em;
        text-align: justify;
        /* height: 320px; */
        flex: 1;
    }

    .post-date {
        display: flex;
        flex-flow: row wrap;
        justify-content: end;
        width: 100%;
        padding: 1em;
        border-top: 1px solid rgb(219, 213, 213);
    }

    h2 {
        font-size: large;
    }

    .top {
        text-align: center;
        margin: 1em;
    }

    .top1 {
        background-color: rgb(8, 20, 187);
        color: #f9f9f9;
        font-weight: 600;
    }

    @media (min-width: 36em) {
        main {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 1em;
            width: 100%;
        }

        h2 {
            text-align: start;
            font-size: large;
        }
    }

    @media (min-width: 62em) {
        main {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 1em;
            width: 100%;
        }
    }
</style>
