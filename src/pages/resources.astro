        flex-flow: row wrap;
        justify-content: end;
        width: 100%;
        padding: 1em;
        border-top: 1px solid rgb(219, 213, 213);
    }

    h2 {
        font-size: large;
    }

    .top {
        text-align: center;
        margin: 1em;
    }

    .top1 {
        background-color: rgb(8, 20, 187);
        color: #f9f9f9;
        font-weight: 600;
    }

    @media (min-width: 36em) {
