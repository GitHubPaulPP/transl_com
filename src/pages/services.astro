---
import BaseLayout from "../layouts/BaseLayout.astro";

const title = "Professional Russian translation services";
const description =
    "We specialize in English-Russian translation services for business and corporate documents, with a focus on legal, financial, and marketing translations";
const url = "https://enrutransl.com/services/";
---

<BaseLayout description={description} title={title} url={url}>
    <main>
        <section class="serv-hero">
            <div class="row">
                <div class="hero-content">
                    <h1>
                        Russian Translation Services for Business and Corporate
                        Documents
                    </h1>
                    <p class="sub-h1">
                        Get your legal, financial, and marketing documents or
                        text-based content translated from English into Russian
                        and from Russian into English by a professional
                        translator with
                        <strong>fast delivery</strong>.
                    </p>
                    <div class="action">
                        <a href="/contact#cont-form" class="cta-button"
                            >Start Your Order</a
                        >
                    </div>
                </div>
                <div class="hero-image">
                    <img
                        src="/services-hero.svg"
                        alt="Illustration of people holding documents"
                        width="350"
                        height="700"
                    />
                </div>
            </div>
            <div class="symbols-cont">
                <div class="symbols">
                    <img
                        src="/proz.png"
                        alt="proz-png proof of membership"
                        loading="lazy"
                        decoding="async"
                    />
                </div>
                <div class="symbols">
                    <img
                        src="/goodfirms-logo.png"
                        alt="goodfirms-logo proof of membership"
                        loading="lazy"
                        decoding="async"
                    />
                </div>

                <div class="symbols">
                    <img
                        src="/PayPal.png"
                        alt="paypal-logo proof of secure payments"
                        loading="lazy"
                        decoding="async"
                    />
                </div>
                <div class="symbols">
                    <img
                        src="/ssl.png"
                        alt="ssl-png proof of website security"
                        loading="lazy"
                        decoding="async"
                    />
                </div>
            </div>
        </section>
        <section>
            <div class="hr-line">
                <hr />
            </div>

            <div class="comp-logos-cont">
                <div class="text-logo">
                    <p>Trusted by global businesses</p>
                </div>
                <div class="comp-logos">
                    <div class="img-holder">
                        <img
                            src="/world-bank.svg"
                            alt="World Bank Group Logo as my client"
                            width="120"
                            height="30"
                        />
                    </div>
                    <div class="img-holder">
                        <img
                            src="/raiff.svg"
                            alt="Raiffeisen Bank Logo as my client"
                            width="120"
                            height="30"
                        />
                    </div>
                    <div class="img-holder">
                        <img
                            src="/eni.svg"
                            alt="Eni S.p.A. Logo as my client"
                            width="120"
                            height="30"
                        />
                    </div>
                    <div class="img-holder">
                        <img
                            src="/ldc.svg"
                            alt="Louis Dreyfus Company Logo as my client"
                            width="120"
                            height="30"
                        />
                    </div>
                    <div class="img-holder">
                        <img
                            src="/ford.svg"
                            alt="Ford Logo as my client"
                            width="120"
                            height="30"
                        />
                    </div>
                    <div class="img-holder">
                        <img
                            src="/sberbank.svg"
                            alt="Sberbank Logo as my client"
                            width="120"
                            height="30"
                        />
                    </div>
                </div>
            </div>

            <div class="cases">
                <a class="link-cases" href="#">READ CASE STUDIES â†’</a>
            </div>

            <div class="hr-line">
                <hr />
            </div>
        </section>
    </main>

    <section class="cont-satisf">
        <div class="satisf">
            <img
                class="satisf-img"
                src="/cup.svg"
                alt="cup svg"
                loading="lazy"
            />
            <h3>Guaranteed Quality</h3>
            <p>
                We handle every project with meticulous care. Each translation
                undergoes a quality check to ensure it meets the highest
                standards of accuracy. If you're not completely satisfied, we'll
                revise it for free until it perfectly aligns with your needs.
            </p>
        </div>

        <div class="satisf">
            <img
                class="satisf-img"
                src="/delivery.svg"
                alt="delivery svg"
                loading="lazy"
            />
            <h3>On-Time Delivery</h3>
            <p>
                We pride ourselves on our efficient workflow, which ensures that
                over 99.9% of our translations are delivered on time. In the
                rare event that we do miss a deadline, we will refund the full
                cost of your translation.
            </p>
        </div>

        <div class="satisf">
            <img
                class="satisf-img"
                src="/handshake.svg"
                alt="handshake svg"
                loading="lazy"
            />
            <h3>Pay After Delivery</h3>
            <p>
                Our 'Pay After Delivery' model reflects our trust and
                commitment. You can pay within five days of the translation's
                delivery via bank transfer, Paypal, or Payoneer. <a
                    href="/faq#pay-later">Learn more</a
                >
            </p>
        </div>
    </section>

    <section>
        <div class="process-h2"><h2>OUR PROCESS</h2></div>

        <div class="proc-container">
            <div class="process">
                <img
                    class="process-img"
                    src="/start.svg"
                    alt="start svg"
                    loading="lazy"
                />
                <h3>Project Initiation</h3>
                <p>
                    You reach out with your translation needs. We respond to
                    gather all necessary details, including document types,
                    target languages, and desired turnaround times. You also
                    provide any other special requirements you want us to adhere
                    to (glossaries, style guides, if any).
                </p>
            </div>

            <div class="process">
                <img
                    class="process-img"
                    src="/teamwork.svg"
                    alt="work svg"
                    loading="lazy"
                />
                <h3>Translation Process</h3>
                <p>
                    We work diligently to render your documents accurately in
                    the Russian language. The translation undergoes a series of
                    reviews and revisions to correct any nuances and ensure the
                    translation meets the specific industry and cultural
                    standards. We perform final quality assurance checks to
                    ensure top-quality, error-free deliverables.
                </p>
            </div>

            <div class="process">
                <img
                    class="process-img"
                    src="/delivery.svg"
                    alt="delivery svg"
                    loading="lazy"
                />
                <h3>Delivery</h3>
                <p>
                    The completed translation is delivered to you via your
                    chosen method. You review the deliverable and provide
                    feedback. If revisions are required, we promptly make the
                    necessary adjustments and resend the revised document at no
                    additional cost.
                </p>
            </div>

            <div class="process">
                <img
                    class="process-img"
                    src="/finish.svg"
                    alt="finish svg"
                    loading="lazy"
                />
                <h3>Project Completion</h3>
                <p>
                    Once you are fully satisfied with the translation, the
                    project is considered complete. We appreciate and welcome
                    your feedback to continuously improve our services. We are
                    just an <a href="/contact/">email away</a>.
                </p>
            </div>
        </div>
    </section>

    <!-- CTA Section HTML -->
    <section class="cta-midsection">
        <h2>Order Russian translation now</h2>
        <button class="cta-midbutton">Talk to Our Team</button>
    </section>

    <section class="cta-section">
        <div class="cta-content">
            <h2>Do you need assistance?</h2>
            <p>
                We are here to help you get a relevant quote for complex
                business document translation, corporate website/software
                localization, and any other translation-related projects.
            </p>
            <a href="/contact#cont-form" class="cta-button1">Get a quote</a>
        </div>
    </section>

    <form class="top" action="#top">
        <button class="top1" type="submit">Back to Top</button>
    </form>
</BaseLayout>

<style>
    .row {
        display: flex;
        flex-wrap: row wrap;
        margin: 1.2em;
    }

    .hero-content {
        padding: 0.5em;
        position: relative;
        width: 100%;
    }

    .hero-content h1 {
        font-size: x-large;
        color: #1d3461;
        font-weight: 900;
        line-height: 1.2;
    }

    .sub-h1 {
        font-weight: 300;
        font-size: large;
        line-height: 1.5;
        margin-top: 0;
        margin-bottom: 1.5em;
    }

    .action {
        display: flex;
        flex-flow: column;
        margin-top: 2em;
        text-align: center;
    }

    .cta-button {
        min-width: 220px;
        width: 100%;
        font-size: larger;
        line-height: 1.75;
        padding: 0.3125em 1.5em;
        border-radius: 0.5em;
        background-color: rgb(235, 54, 120);
        border-color: rgb(235, 54, 120);
        color: #fff;
        border: 1px solid transparent;
        display: inline-block;
        font-weight: 400;
        text-align: center;
    }

    a {
        text-decoration: none;
    }

    .hero-image {
        display: none;
        padding: 1em;
        position: relative;
        width: 100%;
    }

    .symbols-cont {
        display: flex;
        flex-flow: row wrap;
        justify-content: center;
        align-items: center;
        margin-top: 2em;
        margin-bottom: 5em;
    }

    .symbols img {
        width: 5em;
        height: 2em;
        object-fit: contain;
        margin: 0.7em;
    }

    .hr-line {
        padding-top: 0.2em;
        padding-bottom: 0.2em;
        color: #4d4843;
    }

    .hr-line hr {
        border-color: #9b9b9b;
    }

    hr {
        margin: 0;
        border-top: 0.5px solid #ddd;
        height: 0;
        overflow: visible;
    }

    .comp-logos-cont {
        width: 100%;
        padding-left: 0.94em;
        padding-right: 0.94em;
        margin-left: auto;
        margin-right: auto;
    }

    .text-logo {
        display: flex;
        flex-flow: row wrap;
        justify-content: center;
    }

    .text-logo p {
        font-size: 1.1em;
        line-height: 1.75;
        color: #4a4a4a;
        font-weight: 600;
        margin-bottom: 2.5em;
        margin-top: 2em;
    }

    .comp-logos {
        display: flex;
        flex-flow: row wrap;
        justify-content: space-around;
    }

    .img-holder {
        margin: 1.5em;
    }

    .img-holder img {
        width: 5em;
        height: 2em;
    }

    .cases {
        display: flex;
        flex-flow: row wrap;
        justify-content: center;
        margin-top: 2em;
        margin-bottom: 3em;
    }

    .cases a {
        line-height: 1.5;
        font-size: 1em;
        color: #1cad7e;
        font-weight: 400;
        text-decoration: none;
    }

    .satisf {
        display: flex;
        flex-flow: column;
        align-items: center;
        text-align: justify;
        padding: 2em;
    }

    .satisf-img {
        width: 2em;
    }

    .satisf p {
        line-height: 1.3;
        font-weight: 300;
    }

    .process-h2 {
        text-align: center;
    }

    .process {
        display: flex;
        flex-flow: column;
        align-items: center;
        text-align: justify;
        padding: 2em;
    }

    .process-img {
        width: 2em;
    }

    .process p {
        line-height: 1.3;
        font-weight: 300;
    }

    /* CTA Section CSS */
    .cta-midsection {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        background-color: #e6f2f8; /* Replace with a shade complementary to your color palette */
        padding: 40px;
        color: #1d3461;
        text-align: center;
        border-radius: 8px;
        margin-top: 40px;
    }

    .cta-midsection h2 {
        font-size: large;
        font-weight: 700;
        margin-bottom: 20px;
    }

    .cta-midbutton {
        background-color: rgb(
            235,
            54,
            120
        ); /* Darker shade of the section background for contrast */
        color: white;
        padding: 15px 30px;
        font-size: 1rem;
        font-weight: 600;
        text-transform: uppercase;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

    .cta-midbutton:hover {
        background-color: #b90a79; /* Slightly darker shade for hover effect */
    }

    /* CTA Section CSS */

    .cta-section {
        background-color: #f4f8ff; /* Light background for contrast */
        padding: 40px;
        text-align: center;
        border-radius: 8px;
        margin: 40px 0; /* Adds space between testimonials and footer */
    }

    .cta-content h2 {
        font-size: 2rem;
        color: #1c2237; /* Dark blue for a professional look */
        margin-bottom: 20px;
    }

    .cta-content p {
        font-size: 1.2rem;
        color: #4a4a4a; /* Slightly darker text for readability */
        margin-bottom: 30px;
        max-width: 800px;
        margin-left: auto;
        margin-right: auto;
    }

    .cta-button1 {
        background-color: rgb(235, 54, 120); /* Bright color for the button */
        color: #fff;
        padding: 15px 30px;
        font-size: 1.2rem;
        border-radius: 5px;
        text-decoration: none;
        display: inline-block;
        transition: background-color 0.3s ease;
    }

    .cta-button:hover {
        background-color: #e68a00; /* Darker orange on hover */
    }

    .top {
        text-align: center;
        margin: 1em;
    }

    .top1 {
        background-color: rgb(8, 20, 187);
        color: #f9f9f9;
        font-weight: 600;
    }

    /* Media queries for tablets */

    @media (min-width: 36em) {
        .row:first-of-type {
            align-items: center;
        }

        .action {
            display: inline-flex;
        }

        .hero-image {
            text-align: center;
            display: block;
            flex: 0 0 50%;
            max-width: 50%;
        }

        .hero-image img {
            height: auto;
            max-width: 100%;
            vertical-align: middle;
            border-style: none;
        }

        .symbols-cont {
            justify-content: space-around;
        }

        .text-logo p {
            font-size: 2em;
            font-weight: 400;
        }

        .cont-satisf {
            display: flex;
            flex-flow: row;
        }

        .satisf {
            display: flex;
            flex-flow: column nowrap;
            justify-content: center;
            text-align: justify;
            padding: 2em;
            height: 100%;
        }

        .proc-container {
            display: flex;
            flex-flow: row wrap;
            width: 100%;
            height: 100%;
        }

        .process {
            display: flex;
            flex-flow: column;
            align-items: center;
            text-align: justify;
            flex: 0 2 50%;
            padding: 2em;
            height: 100%;
        }

        .cta-midsection h2 {
            font-size: x-large;
            font-weight: 600;
            margin-bottom: 20px;
        }
    }
</style>
