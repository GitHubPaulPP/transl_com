<script>
    document.addEventListener("DOMContentLoaded", () => {
        const navLinks = document.querySelectorAll(".sticky-nav a");

        // Create an array of sections, ensuring the href is not null
        const sections = Array.from(navLinks)
            .map((link) => {
                const href = link.getAttribute("href");
                return href ? document.querySelector(href) : null; // Return null if href is null
            })
            .filter((section) => section !== null); // Filter out any null values

        // Function to set the active link based on the current section
        function setActiveLink() {
            const scrollPosition = window.scrollY + 150; // Adjust the offset if necessary

            sections.forEach((section, index) => {
                if (section) {
                    // Ensure the section is found
                    const sectionTop =
                        section.getBoundingClientRect().top + window.scrollY; // Get top position in document
                    const sectionBottom =
                        sectionTop + (section as HTMLElement).offsetHeight; // Cast to HTMLElement for offsetHeight

                    // Check if the section is in the viewport
                    if (
                        scrollPosition >= sectionTop &&
                        scrollPosition < sectionBottom
                    ) {
                        // Remove 'active' class from all links, then add it to the current section link
                        navLinks.forEach((link) =>
                            link.classList.remove("active"),
                        );
                        navLinks[index].classList.add("active");
                    }
                }
            });
        }

        // Event listener for scrolling
        window.addEventListener("scroll", setActiveLink);

        // Smooth scrolling for clicks
        navLinks.forEach((link) => {
            link.addEventListener("click", function (event) {
                event.preventDefault();

                // Remove 'active' class from all links, then add it to the clicked link
                navLinks.forEach((link) => link.classList.remove("active"));
                this.classList.add("active");

                // Get the href value, which includes the anchor, and use it to locate the target
                const targetId = this.getAttribute("href"); // e.g., "#anchor1"
                const targetSection = document.querySelector(targetId);

                // Ensure target section exists and scroll to it
                if (targetSection) {
                    const sectionTop =
                        targetSection.getBoundingClientRect().top +
                        window.scrollY;
                    window.scrollTo({
                        top: sectionTop - 100, // Adjust offset as needed
                        behavior: "smooth",
                    });
                }
            });
        });
    });

    document.addEventListener("DOMContentLoaded", () => {
        // Query all the '.faq-question' elements
        const questions = document.querySelectorAll(".faq-question");

        // Add click event listeners to each question
        questions.forEach((question) => {
            question.addEventListener("click", () => {
                const answer = question.nextElementSibling;
                if (answer && answer instanceof HTMLElement) {
                    answer.style.display =
                        answer.style.display === "block" ? "none" : "block";
                }
            });
        });

        // Function to expand the section from URL hash
        function expandSectionFromHash() {
            const hash = window.location.hash;
            if (hash) {
                const target = document.querySelector(hash);
                if (target && target instanceof HTMLElement) {
                    const answerSection = target.closest(".faq-answer");
                    if (answerSection && answerSection instanceof HTMLElement) {
                        answerSection.style.display = "block";
                        target.scrollIntoView({
                            behavior: "smooth",
                            block: "start",
                        });
                    }
                }
            }
        }

        // Execute on load to check for any hash present in the URL
        expandSectionFromHash();

        // Listen for hash changes in the URL to handle in-page navigation via back/forward browser buttons
        window.addEventListener("hashchange", expandSectionFromHash, false);
    });
