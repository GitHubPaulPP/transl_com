---
import BaseLayout from "../layouts/BaseLayout.astro";

const title = "Contact Us | We are happy to hear from you";
const description =
    "Get in touch with EnRu Translations for your English-Russian translation needs.";
const url = "https://enrutransl.com/contact/";
---

<BaseLayout description={description} title={title} url={url}>
    <!-- <link slot="head" rel="preload" href="hero_image.svg" as="image" /> -->

    <main>
        <div class="heading-contact">
            <h1>Have a question or want to get a quote?</h1>

            <p>
                Please fill out the secure form below and our team will contact you
                shortly.
            </p>

            <p>Or send us an email to the address below.</p>
        </div>

        <section class="contact-section-1">
            <div class="footer-left">
                <p class="title_com">EnRu Translations</p>
                <div class="address">
                    <img src="/addr.svg" alt="address svg" loading="eager" />
                    <p>2 Mite Ružića,</p>
                    <p>Novi Sad 21000,</p>
                    <p>Serbia</p>
                </div>

                <div class="email">
                    <img src="/email3.svg" alt="email svg" loading="lazy" />
                    <p>
                        <a href="mailto:info@enrutransl.com"
                            >info@enrutransl.com</a
                        >
                    </p>
                </div>

                <!-- <div class="social">
                    <a href="https://wa.me/381616323368" target="_blank">
                        <img
                            src="/whatsapp.svg"
                            alt="Contact on WhatsApp"
                            loading="lazy"
                        />
                    </a>
                    <a href="https://t.me/enrutransl" target="_blank">
                        <img
                            src="/telegram.svg"
                            alt="Contact on Telegram"
                            loading="lazy"
                        />
                    </a>
                    <a
                        href="https://signal.me/#p/+381616323368"
                        target="_blank"
                    >
                        <img
                            src="/signal.png"
                            alt="signal png"
                            loading="lazy"
                        />
                    </a>
                </div> -->

                <div class="working-hours">
                    <img src="/clock.svg" alt="clock svg" loading="lazy" />
                    <p>Working Hours:</p>
                    <p>Mon - Fri,</p>
                    <p>09:00 - 20:00.</p>
                </div>

                <p class="discuss1">Follow us on:</p>
                <div class="social1">
                    <a
                        href="https://www.facebook.com/profile.php?id=61558938370722"
                    >
                        <img
                            src="/facebook.svg"
                            alt="telegram svg"
                            loading="lazy"
                        /></a
                    >
                    <a href="https://x.com/enrutr">
                        <img
                            src="/x-logo.png"
                            alt="x-logo png"
                            loading="lazy"
                        /></a
                    >
                </div>
            </div>
        </section>

        <section class="contact-section">
            <h2 id="cont-form">Send us a message</h2>
            <form
                class="contact-form"
                action="https://formsubmit.co/info@enrutransl.com"
                method="POST"
            >
                <div class="form-group">
                    <input
                        type="text"
                        name="name"
                        placeholder="Name"
                        required
                    />
                    <input
                        type="text"
                        name="company"
                        placeholder="Company name"
                    />
                </div>
                <div class="form-group">
                    <input
                        type="email"
                        name="email"
                        placeholder="Email address"
                        required
                    />
                </div>
                <input type="text" name="subject" placeholder="Subject" />
                <textarea name="message" placeholder="Message" required
                ></textarea>
                <button type="submit" class="submit-btn">Send Message</button>
            </form>
        </section>
    </main>
    <form class="top" action="#top">
        <button class="top1" type="submit">Back to Top</button>
    </form>
</BaseLayout>

<style>
    main {
        display: grid;
        grid-template-columns: 1fr;
    }

    .heading-contact {
        display: grid;
        grid-template-columns: 1fr;
        text-align: center;
        padding: 1.5em;
        width: 100%;
    }

    .heading-contact h1 {
        /* font-weight: 300; */
        line-height: 1.5;
    }

    .heading-contact p {
        font-weight: 400;
        line-height: 1.5;
    }

    .contact-section-1 {
        display: flex;
        flex-flow: column;
        align-items: center;
        margin: 1em;
        margin-top: 2em;
        background-color: white;
        border: 1px solid rgb(0, 255, 200);
        border-radius: 3%;
    }

    .footer-left {
        display: flex;
        flex-flow: column;
        align-items: center;
        width: 100%;
        padding-left: 1em;
    }

    .title_com {
        font-weight: 900;
        font-size: larger;
        margin-bottom: 1em;
        text-align: center;
        color: darkblue;
        width: 100%;
    }

    .address {
        display: flex;
        flex-flow: column wrap;
        justify-content: space-around;
        align-items: center;
        margin-bottom: 2em;
        width: 100%;
    }

    .address img {
        width: 2em;
    }

    .address > p {
        font-weight: 600;
        /* text-align: start; */
        font-size: small;
        margin: 0;
    }

    .phone {
        display: flex;
        flex-flow: column wrap;
        justify-content: space-around;
        align-items: center;
        margin-bottom: 1em;
        width: 100%;
    }

    .phone img {
        width: 1.5em;
    }

    .phone > p {
        font-weight: 600;
        text-align: start;
        font-size: small;
    }

    .email {
        display: flex;
        flex-flow: column wrap;
        justify-content: flex-start;
        align-items: center;
        width: 100%;
    }

    .email img {
        width: 2em;
    }

    .email > p {
        font-weight: 600;
        text-align: start;
        font-size: small;
    }

    .social {
        display: flex;
        flex-direction: row;
        align-items: center;
        padding: 0.5em;
        margin-bottom: 2em;
    }

    .social img {
        width: 2em;
        padding: 0.3em;
        font-weight: 500;
        margin: 0.7em;
    }

    .social1 {
        display: flex;
        flex-direction: row;
        align-items: center;
        padding: 0.5em;
        margin: 0;
    }

    .social1 img {
        width: 2em;
        padding: 0.3em;
        margin: 0.7em;
    }

    .discuss1 {
        font-weight: 600;
        font-size: small;
        text-align: center;
        padding: 1em;
        color: darkblue;
        margin-top: 2em;
        margin-bottom: 0;
    }

    .working-hours {
        display: flex;
        flex-flow: column wrap;
        justify-content: flex-start;
        align-items: center;
        margin-bottom: 0.7em;
        width: 100%;
        line-height: 0.5;
    }

    .working-hours img {
        width: 1.5em;
    }

    .working-hours > p {
        font-weight: 600;
        margin-left: 0.9em;
        font-size: small;
    }

    .contact-section {
        width: 100%;
        max-width: max-content;
        padding: 20px;
        background-color: #fff;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        border-radius: 10px;
    }

    h2 {
        text-align: center;
        font-size: 1.5em;
        margin-bottom: 20px;
        font-weight: bold;
    }

    .contact-form {
        display: flex;
        flex-direction: column;
    }

    .form-group {
        display: flex;
        justify-content: space-between;
        gap: 10px;
        margin-bottom: 15px;
    }

    input,
    textarea {
        width: 100%;
        padding: 10px;
        margin-bottom: 15px;
        border: 2px solid #ccc;
        border-radius: 5px;
        font-size: 1em;
    }

    textarea {
        height: 100px;
        resize: none;
    }

    .submit-btn {
        background-color: rgb(235, 54, 120);
        color: white;
        padding: 12px;
        border: none;
        border-radius: 5px;
        font-size: 1em;
        cursor: pointer;
        transition: background-color 0.3s;
        width: 10em;
    }

    .submit-btn:hover {
        background-color: #d83a2f;
    }

    .top {
        text-align: center;
        margin: 1em;
    }

    .top1 {
        background-color: rgb(8, 20, 187);
        color: #f9f9f9;
        font-weight: 600;
    }

    /* Media queries for tablets */

    @media (min-width: 36em) {
        main {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
        }

        .heading-contact {
            grid-column: 1/3;
            grid-row: 1/2;
            text-align: start;
        }

        .contact-section {
            grid-column: 1/2;
            grid-row: 2/3;
        }

        .contact-section-1 {
            grid-column: 2/3;
            grid-row: 2/3;
        }

        .top {
            text-align: center;
            margin: 1em;
        }

        .top1 {
            background-color: rgb(8, 20, 187);
            color: #f9f9f9;
            font-weight: 600;
        }
    }
</style>
