---
import BaseLayout from "../layouts/BaseLayout.astro";

const title = "Professional translation company";
const description =
	"EnRu Translations is a small team of experienced professionals specializing in English-Russian corporate and business document translation. Contact us for a free quote today";
const url = "https://enrutransl.com";
---

<BaseLayout description={description} title={title} url={url}>
