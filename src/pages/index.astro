<script>
	document.addEventListener("DOMContentLoaded", function () {
		let testimonials = document.querySelectorAll(".testimonial");
		let currentTestimonialIndex = 0;

		// Initially display the first testimonial
		(testimonials[currentTestimonialIndex] as HTMLElement).style.opacity =
			"1";
		testimonials[currentTestimonialIndex].classList.add("active");

		setInterval(function () {
			// Remove the active class and hide the current testimonial
			(
				testimonials[currentTestimonialIndex] as HTMLElement
			).style.opacity = "0";
			testimonials[currentTestimonialIndex].classList.remove("active");

			// Move to the next testimonial, or loop back to the first if at the end
			currentTestimonialIndex =
				(currentTestimonialIndex + 1) % testimonials.length;

			// Add the active class and display the next testimonial
			(
				testimonials[currentTestimonialIndex] as HTMLElement
			).style.opacity = "1";
			testimonials[currentTestimonialIndex].classList.add("active");
		}, 5000); // Change testimonial every 5 seconds
	});
</script>
