---
import BaseLayout from "../layouts/BaseLayout.astro";

const title = "Professional English-Russian Translation Service	| Homepage";
const description =
	"EngRusTranslate provides English-Russian translation services to help you reach your global clients.";
---

<BaseLayout description={description} title={title}>
	<!-- <link slot="head" rel="preload" href="hero_image.svg" as="image" /> -->
	<main>
		<section class="main_container">
			<div class="elevate">
				<h1>
					Expand your global reach with English to Russian
					professional translation
				</h1>
				<p class="crafted">
					Crafted by experts, powered by technology, delivered in a
					timely manner
				</p>
			</div>

			<div class="vector">
				<img
					class="hero-image"
					src="hero_image.svg"
					alt="Vector illustration of elevating global reach for hero section"
				/>
			</div>
		</section>

		<section class="sec_container">
			<div class="uvp">
				<h2 class="init">What's in it for you?</h2>
				<ul class="unordered">
					<li>Direct Expert Access</li>
					<li>Specialized Expertise</li>
					<li>Quality and Accuracy</li>
					<li>Timeliness and Reliability</li>
					<li>Confidentiality and Security</li>
				</ul>
			</div>

			<div class="quote_button">
				<button class="quote" type="button">Get Instant Quote</button>
			</div>
		</section>

		<h2 class="heading">What Sets Us Apart?</h2>

		<h3 class="intro_para">
			We are a small team of highly specialized translators dedicated to
			delivering value to our clients:
		</h3>

		<section class="set_apart">
			<div class="list_values">
				<ul class="ul_style">
					<li>
						<p>
							<strong>Not an agency/translation mill.</strong> There
							are no middlemen. This ensures a direct line of communication
							and a clear understanding of your needs.
						</p>
					</li>
					<li>
						<p>
							<strong>Laser-focused specialization</strong>
							in only one language pair: English - Russian. This ensures
							unparalleled precision and cultural accuracy.
						</p>
					</li>
					<li>
						<p>
							<strong>Registered and Reliable:</strong>
							As a registered business, we prioritize confidentiality
							and security of your projects.
						</p>
					</li>
					<li>
						<p>
							Although based outside of Russia, we are <strong>
								native speakers of Russian</strong
							> and seasoned translators with over 15 years of professional
							experience.
						</p>
					</li>
					<li>
						<p>
							<strong>In-depth knowledge</strong> of our areas of expertise
							backed up by a proprietary collection of translation
							memories and term-bases.
						</p>
					</li>
				</ul>
			</div>
		</section>

		<section>
			<h2 class="serv_overview">Services Overview</h2>

			<div class="serv_ul">
				<div class="serv-1">
					<img src="doc_serv.svg" alt="Translation icon" />Translation
				</div>
				<div class="serv-2">
					<img src="pin_icon.svg" alt="Revision icon" />Revision
				</div>
				<div class="serv-3">
					<img
						src="glob_icon.svg"
						alt="Proofreading icon"
					/>Proofreading
				</div>
				<div class="serv-4">
					<img
						src="menu_icon.svg"
						alt="Localization icon"
					/>Localization
				</div>
				<div class="serv-5">
					<img
						src="cd_icon.svg"
						alt="Translation QA icon"
					/>Translation Quality Assessment
				</div>
				<div class="serv-6">
					<img src="browse_icon.svg" alt="Terms icon" />Terminology
					Research
				</div>
				<div class="serv-7">
					<img
						src="share_icon.svg"
						alt="Transcription icon"
					/>Transcription
				</div>
				<div class="serv-8">
					<img src="pen_icon.svg" alt="On-page icon" />On-page SEO for
					Localized Websites
				</div>
				<div class="serv-9">
					<img src="pers_icon.svg" alt="Tutoring icon" />Russian
					Language Tutoring
				</div>
			</div>

			<section>
				<div class="fields">
					<h2>Industry Expertise</h2>
					<ul class="fields_exp">
						<li>Legal</li>
						<li>Marketing</li>
						<li>Business/ E-Commerce</li>
						<li>Finance/Taxes/ Accounting</li>
						<li>Investment/ Securities</li>
						<li>Blockchain and Cryptocurrency</li>
						<li>Government / Politics</li>
						<li>Information Technology</li>
					</ul>
				</div>
			</section>

			<div class="testimonials-wrapper">
				<h2 class="tes_head">Our Clients Say</h2>
				<section class="testimonials">
					<div class="testimonials_container">
						<div class="testimonial active">
							<img
								src="translated_srl.svg"
								alt="Praising professional translation services"
								class="tes-image-1"
							/>

							<figure>
								<blockquote
									cite="https://www.proz.com/feedback-card/803573"
								>
									<q
										>Pavel has worked with us as a
										professional freelance translator from
										EN to RU in various subject fields. Our
										team has had positive experiences from
										this collaboration, and Pavel has become
										a valuable member of our staff of
										freelance translators.</q
									>
								</blockquote>

								<figcaption>—TRANSLATED SRL</figcaption>
							</figure>
						</div>
					</div>
					<div class="testimonial">
						<img
							src="tlex.svg"
							alt="Praising professional translation services"
							class="tes-image-2"
						/>

						<figure>
							<blockquote
								cite="https://www.proz.com/feedback-card/803573"
							>
								<q
									>We are very satisfied with the translations
									Pavel made for us and we'll continue working
									with him in the future.</q
								>
							</blockquote>
							<figcaption>—TLex</figcaption>
						</figure>
					</div>
					<div class="testimonial">
						<img
							src="motaword.svg"
							alt="Praising professional translation services"
							class="tes-image-3"
						/>

						<figure>
							<blockquote
								cite="https://www.proz.com/feedback-card/803573"
							>
								<q>Yes!</q>
							</blockquote>
							<figcaption>—MotaWord</figcaption>
						</figure>
					</div>
					<!-- Add more testimonials as needed -->
				</section>
			</div>
		</section>
	</main>

	<style>
		.main_container {
			display: flex;
			flex-direction: column;
			align-items: center;
			/* Stacks children vertically by default */
		}

		.elevate {
			/* border-image: linear-gradient(#fde68a, #fca5a5) 30; */
			margin-top: 1em;
			margin-left: 1em;
			margin-right: 1em;
			padding: 0.1em;
			text-align: center;
			font-size: large;
			line-height: 1.15;
		}

		.vector {
			margin-top: 2em;
			margin-bottom: 2em;
			width: 90%;
			/* Ensures each container takes the full width of its parent */
		}

		.sec_container {
			display: flex;
			flex-flow: column;
			align-items: center;
		}

		.uvp {
			/* border-image: linear-gradient(#fde68a, #fca5a5) 30; */
			/* margin: 0.5em; */
			padding: 0.5em;
			font-weight: bold;
			font-size: large;
			line-height: 1.15;
		}

		.init {
			text-align: center;
			text-transform: uppercase;
		}

		.uvp ul {
			list-style: none;
		}

		.uvp li:before {
			content: "";
			display: flex;
			height: 1em;
			width: 1em;
			background-image: url(/checked.svg);
			background-size: contain;
			background-repeat: no-repeat;
			margin: 0.3em;
		}

		.unordered li {
			display: flex;
			flex-flow: row;
			align-items: center;
			margin: 0.5em;
			padding: 0.5em;
			margin-right: 1em;
		}

		.quote_button {
			border: 2px ridge;
			border-image: linear-gradient(#fde68a, #fca5a5) 30;
			margin: 0.5em;
			padding: 0.5em;
		}

		.quote {
			font-weight: bold;
			background-color: darkblue;
			color: antiquewhite;
			font-size: large;
		}

		/*next section  */

		.set_apart {
			display: flex;
			flex-flow: column;
			align-items: center;
			width: 100%;
		}

		.heading {
			display: flex;
			flex-flow: column;
			padding: 0.5em;
			line-height: 2em;
			font-size: x-large;
			text-transform: uppercase;
			text-align: center;
		}

		.intro_para {
			margin: 1em;
			padding: 0.5em;
			font-weight: bold;
			text-align: center;
			line-height: 2em;
			font-size: large;
		}

		.ul_style li {
			display: flex;
			flex-flow: column;
			align-items: center;
			padding: 0.9em;
			margin-right: 1.5em;
			text-align: center;
			font-weight: 500;
			font-size: medium;
			line-height: 1.5em;
		}

		.list_values li:before {
			content: "";
			display: inline-block;
			height: 1.25em;
			width: 1.25em;
			vertical-align: middle;
			background-image: url(/check-tick.svg);
			background-size: contain;
			background-repeat: no-repeat;
			margin-right: 0.5em;
			margin-bottom: 1em;
		}

		.serv_overview {
			text-align: center;
			font-size: x-large;
			text-transform: uppercase;
		}

		.serv_ul {
			display: flex;
			flex-wrap: wrap;
			justify-content: space-around; /* Distributes space around items */
			align-items: center; /* Vertically centers items in their flex container */
			gap: 2em; /* Adds space between flex items */
		}

		.serv_ul > div {
			display: flex;
			flex-direction: column;
			align-items: center;
			text-align: center;
			width: 50em; /* Adjust based on your preference */
			font-weight: 600;
			font-size: large;
		}

		.serv_ul > div img {
			margin-bottom: 1em; /* Space between icon and text */
			width: 3em; /* Adjust based on your icon size */
			height: auto;
		}

		.fields_exp li {
			display: flex;
			flex-flow: column;
			align-items: center;
			padding: 1em;
			margin-right: 1.5em;
			font-weight: 600;
			font-size: larger;
			text-align: center;
		}

		.fields > h2 {
			padding: 1em;
			text-align: center;
			font-size: x-large;
			text-transform: uppercase;
			font-weight: bold;
		}

		.fields_exp li:before {
			content: "";
			display: inline-block;
			height: 1.25em;
			width: 1.25em;
			vertical-align: middle;
			background-image: url(/check-tick.svg);
			background-size: contain;
			background-repeat: no-repeat;
			margin-bottom: 1em;
		}

		.testimonials {
			width: 90%;
			/* Responsive width */
			margin: 2rem auto;
			/* Responsive vertical margin */
			/* padding: 1rem; */
			/* Responsive padding */
			box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
			position: relative;
			border-radius: 10px;
			/* Adds rounded corners */
			background: #f9f9f9;
			/* Light background color */
		}

		.testimonials_container {
			position: relative;
		}

		.testimonial {
			display: none;
			/* Initially hides all testimonials */
			text-align: center;
			/* Centers the text */
			/* padding: 1rem; */
			/* Responsive padding */
			font-size: 1rem;
			/* Base font size */
		}

		.testimonial.active {
			display: block;
			/* Only the active testimonial is displayed */
			opacity: 0;
			/* Start with the testimonial being invisible */
			transition: opacity 1s ease-in-out;
			/* Smooth transition for the opacity */
			font-size: 1.1rem;
			/* Slightly larger font for active testimonial */
		}

		/* Responsive adjustments */
		@media (min-width: 768px) {
			.testimonial {
				font-size: 1.2rem;
				/* Larger font size on tablets and above */
			}
		}

		.tes-image-1 {
			width: 50%;
			/* Fills the container width */
			height: auto;
			/* Adjusts height automatically */
		}

		.tes-image-2 {
			width: 30%;
			/* Fills the container width */
			height: auto;
			/* Adjusts height automatically */
		}

		.tes-image-3 {
			width: 30%;
			/* Fills the container width */
			height: auto;
			/* Adjusts height automatically */
		}

		blockquote {
			font-size: small;
			font-weight: 500;
			text-align: justify;
		}

		blockquote {
			border-left: 5px solid rgb(211, 43, 14);
			margin: 0 0 1em 0;
			padding: 2em 1em;
		}

		figcaption {
			font-size: small;
			margin: 1em;
			padding: 1em;
		}

		.tes_head {
			padding: 1em;
			text-align: center;
			font-size: x-large;
			text-transform: uppercase;
			font-weight: bold;
		}

		/* media queries start here */
		@media (min-width: 35em) {
			main {
				margin: 0;
			}

			section {
				margin: 0;
			}
			/* section expand reach */
			.main_container {
				display: flex;
				flex-direction: row;
				margin-top: 2em;
			}

			.elevate {
				display: flex;
				flex-flow: column;
				margin: 0;
				margin-right: 0.5em;
				text-align: left;
				line-height: 1.15;
				flex: 1.2;
				text-align: center;
			}

			.elevate > h1 {
				font-size: xx-large;
				padding: 0.5em;
			}

			.crafted {
				padding-left: 2em;
				padding-right: 2em;
				font-size: large;
			}

			.vector {
				flex: 1.2;
				margin: 1em;
				/* end of section expand reach */
			}

			/* start of section whats in it */
			.sec_container {
				display: flex;
				flex-flow: row;
				padding: 1em;
				margin-top: 3em;
			}

			.uvp {
				font-weight: bold;
				font-size: medium;
				line-height: 1.15;
				flex: 1;
			}

			.init {
				text-align: center;
				text-transform: uppercase;
			}

			.uvp ul {
				list-style: none;
			}

			.uvp > h2 {
				font-size: medium;
			}

			.uvp li:before {
				content: "";
				display: block;
				height: 1.28em;
				width: 2em;
				background-image: url(/checked.svg);
				background-size: contain;
				background-repeat: no-repeat;
			}

			.unordered li {
				display: flex;
				flex-flow: row;
				align-items: center;
				margin: 0.5em;
				padding: 0.5em;
			}

			.quote_button {
				display: flex;
				flex-flow: row;
				justify-content: center;
				flex: 1;
			}

			.quote {
				font-weight: bold;
				background-color: darkblue;
				color: antiquewhite;
				font-size: medium;
				margin: 0;
				padding: 0;
				width: 15em;
			}

			.set_apart {
				display: flex;
				flex-flow: row;
				justify-content: space-around;
				margin-right: 1em;
				padding: 1em;
			}

			.ul_style li {
				display: flex;
				flex-flow: row;
				justify-content: space-evenly;
				font-weight: 500;
				font-size: medium;
				line-height: 1.5em;
				width: 100%;
				padding: 1em;
				text-align: justify;
				background-color: floralwhite;
			}
			.ul_style {
				padding: 1em;
			}

			.heading {
				margin: 0;
			}

			.intro_para {
				margin: 0;
				padding-left: 5em;
				padding-right: 5em;
			}

			.serv_overview {
				text-align: center;
				font-size: x-large;
				text-transform: uppercase;
				margin-bottom: 2em;
			}

			.serv_ul {
				display: flex;
				flex-wrap: wrap;
				justify-content: space-around; /* Distributes space around items */
				align-items: center; /* Vertically centers items in their flex container */
				gap: 2em; /* Adds space between flex items */
			}

			.serv_ul > div {
				display: flex;
				flex-direction: column;
				align-items: center;
				text-align: center;
				width: 10em; /* Adjust based on your preference */
				font-weight: 600;
				font-size: large;
			}

			.serv_ul > div img {
				margin-bottom: 1em; /* Space between icon and text */
				width: 3em; /* Adjust based on your icon size */
				height: auto;
			}
		}
	</style>

	<script>
		document.addEventListener("DOMContentLoaded", function () {
			let testimonials = document.querySelectorAll(".testimonial");
			let currentTestimonialIndex = 0;

			// Initially display the first testimonial
			(
				testimonials[currentTestimonialIndex] as HTMLElement
			).style.opacity = "1";
			testimonials[currentTestimonialIndex].classList.add("active");

			setInterval(function () {
				// Remove the active class and hide the current testimonial
				(
					testimonials[currentTestimonialIndex] as HTMLElement
				).style.opacity = "0";
				testimonials[currentTestimonialIndex].classList.remove(
					"active",
				);

				// Move to the next testimonial, or loop back to the first if at the end
				currentTestimonialIndex =
					(currentTestimonialIndex + 1) % testimonials.length;

				// Add the active class and display the next testimonial
				(
					testimonials[currentTestimonialIndex] as HTMLElement
				).style.opacity = "1";
				testimonials[currentTestimonialIndex].classList.add("active");
			}, 5000); // Change testimonial every 5 seconds
		});
	</script>
</BaseLayout>
