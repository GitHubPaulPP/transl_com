<!-- Load an icon library to show a hamburger menu (bars) on small screens -->
<link
    rel="stylesheet"
    href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"
/>

<header>
    <div class="topnav">
        <div class="logo">
            <a href="/home" aria-label="EngRusTranslate logo"></a>
            <img src="/header_logo.svg" alt="Logo" />
        </div>
        <div class="slogan">Proudly owned by translators</div>
        <nav>
            <div id="myLinks">
                <a href="#aboutus">About us</a>
                <a href="#ourcorevalues">Our core values</a>
                <a href="#services">Services</a>
                <a href="#blog">Blog</a>
                <a href="#contactus">Contact us</a>
            </div>
            <a href="javascript:void(0);" class="icon hamburger">
                <i class="fa fa-bars"></i>
            </a>
        </nav>
    </div>
</header>

<style>
    .topnav {
        overflow: hidden;
        background-color: snow;
        position: relative;
    }
    /* Hide the links inside the navigation menu (except for logo/home) */
    .topnav #myLinks {
        display: none;
    }

    /* Style navigation menu links */
    .topnav a {
        color: blue;
        padding: 5px;
        text-decoration: none;
        font-size: 16px;
        display: block;
    }
    /* Style the hamburger menu */
    /* Align the icon with the logo by adjusting the top property accordingly */
    /* Style the hamburger menu without dynamic vertical centering */
    .topnav a.icon {
        background: dodgerblue;
        display: block;
        position: absolute;
        right: 0;
        top: 0; /* Keep it aligned to the top */
        padding: 10px 15px; /* Increase padding to enlarge the clickable area */
    }

    /* Increase the font size of the icon for larger display */
    .topnav a.icon .fa {
        font-size: 24px; /* Adjust font size for larger icon */
    }

    /* Add a grey background color on mouse-over */
    .topnav a:hover {
        background-color: #ddd;
        color: black;
    }
    /* Style the active link (or home/logo) */
    .active {
        background-color: #04aa6d;
        color: white;
    }
    .slogan {
        color:crimson;
        font-size: 0.7em;
        margin: 0;
        font-weight: bold;
        margin-left: 5px;
        padding: 2px;
    }
</style>
<script type="module">
    document.addEventListener("DOMContentLoaded", () => {
        const hamburger = document.querySelector(".hamburger");
        const myLinks = document.getElementById("myLinks");

        if (hamburger) {
            hamburger.addEventListener("click", () => {
                // Use computed style to get the actual display value
                const displayStyle = window.getComputedStyle(myLinks).display;

                if (displayStyle === "block") {
                    myLinks.style.display = "none";
                } else {
                    myLinks.style.display = "block";
                }
            });
        } else {
            console.error("Hamburger button not found");
        }
    });
</script>
