<script type="text/javascript">
    function updateLocalTime() {
        var now = new Date();
        var utc = now.getTime() + now.getTimezoneOffset() * 60000;

        // Serbia is UTC+1 and UTC+2 in daylight saving time
        var serbiaOffset = 1; // Serbia's time offset from UTC is +1 hour
        var dst = isDST(now); // Check if current date is in daylight saving time
        var serbiaTime = new Date(
            utc + 3600000 * (serbiaOffset + (dst ? 1 : 0)),
        );

        var days = [
            "Sunday",
            "Monday",
            "Tuesday",
            "Wednesday",
            "Thursday",
            "Friday",
            "Saturday",
        ];
        var day = days[serbiaTime.getDay()]; // Get the day of the week
        var hours = serbiaTime.getHours();
        var minutes = serbiaTime.getMinutes();
        var formattedMinutes =
            minutes < 10 ? "0" + minutes : minutes.toString(); // Ensuring minutes is treated as a string

        var strTime = day + ", " + hours + ":" + formattedMinutes; // Correctly formatted time string with comma

        document.getElementById("time").textContent = strTime;
    }

    function isDST(date) {
        var jan = new Date(date.getFullYear(), 0, 1); // Jan 1st of current year
        var jul = new Date(date.getFullYear(), 6, 1); // Jul 1st of current year
        return (
            date.getTimezoneOffset() <
            Math.max(jan.getTimezoneOffset(), jul.getTimezoneOffset())
        );
    }

    setInterval(updateLocalTime, 1000); // Update the time display every second
</script>
